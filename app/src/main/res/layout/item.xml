<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/titleResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textAllCaps="false"
        android:textColor="#500088"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/linkResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.link.com"
        android:textColor="#3F51B5"
        android:textSize="16dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleResponse" />

    <TextView
        android:id="@+id/snippetResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="somthing"
        android:textColor="#6E438C"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linkResponse" />
</androidx.constraintlayout.widget.ConstraintLayout>